<mvc:View
  controllerName="fioriapp.controller.Login"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m">

  <Page id="loginPage" showHeader="false">
    <content>
      <VBox
        id="loginContainer"
        justifyContent="Center"
        alignItems="Center"
        height="100%"
        width="100%"
        class="loginPageVBox">

        <Panel id="loginPanel"
          width="350px"
          class="loginPanel"
          headerText="Welcome Back!">

          <VBox class="loginFormVBox" width="100%" renderType="Bare">

            <Image src="images/logo.png" width="80px" class="loginLogo" />

            <Label text="Username" labelFor="usernamelogin" />
            <Input
              id="usernamelogin"
              placeholder="Enter username"
              width="100%" />

            <Label text="Password" labelFor="passwordlogin" />
            <Input
              id="passwordlogin"
              placeholder="Enter password"
              type="Password"
              width="100%" />

            <Link text="Forgot Password?" press=".onForgotPassword" />

            <Button
              text="Login"
              press=".onLogin"
              type="Emphasized"
              width="100%" />

            <Button
              text="Sign Up"
              press=".onNavigateToSignup"
              type="Emphasized"
              width="100%" />

          </VBox>
        </Panel>
      </VBox>
    </content>
  </Page>
</mvc:View>
