<mvc:View
  controllerName="fioriapp.controller.Signup"
  xmlns:mvc="sap.ui.core.mvc"
  displayBlock="true"
  xmlns="sap.m">

  <Page id="_IDGenPage" title="Sign Up">
    <content>
      <VBox id="_IDGenVBox1" class="sapUiSmallMargin">
        <Input id="username" placeholder="Username" />
        <Input id="emailsignup" placeholder="Email" />
        <Input id="passwordsignup" placeholder="Password" type="Password" />
        <Input id="confirmPassword" placeholder="Confirm Password" type="Password" />
        <Button id="_IDGenButton3" text="Register" press="onSignup" type="Emphasized"/>
        <Button id="_IDGenButton4" text="Back to Login" press="onNavigateToLogin" />
      </VBox>
    </content>
  </Page>
</mvc:View>
