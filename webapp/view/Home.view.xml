<mvc:View
  controllerName="fioriapp.controller.Home"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <Page id="homepage">
    <customHeader>
      <Toolbar design="Solid">
        <Title text="Procurement Cycle Dashboard" level="H2" class="sapUiTinyMargin"/>
      </Toolbar>
    </customHeader>
    <content>

      <!-- One flow container: tiles render sequentially, wrap when needed -->
      <FlexBox
        id="procurementFlow"
        direction="Row"
        wrap="Wrap"
        justifyContent="Start"
        alignItems="Start"
        class="sapUiResponsiveMargin flowContainer">

        <items>
          <!-- 1 -->
          <GenericTile
            id="tileRequisition"
            header="Requirement Identification"
            subheader="Create Purchase Request"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://cart" size="3rem" color="#0070f3"/>
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 2 -->
          <GenericTile
            id="tileSupplierSearch"
            header="Supplier Identification"
            subheader="Find Potential Vendors"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://search" size="3rem" color="#f39c12" />
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 3 -->
          <GenericTile
            id="tileSupplierEvaluation"
            header="Supplier Evaluation &amp; Selection"
            subheader="Assess &amp; Select Vendor"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://employee" size="3rem" color="#27ae60"/>
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 4 -->
          <GenericTile
            id="tilePurchaseOrder"
            header="Purchase Order"
            subheader="Send Order to Vendor"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://document" size="3rem" color="#0070f3" />
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 5 -->
          <GenericTile
            id="tileOrderAck"
            header="Order Acknowledgement"
            subheader="Vendor Confirms Order"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://accept" size="3rem" color="#f39c12"/>
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 6 -->
          <GenericTile
            id="tileDeliveryInspection"
            header="Delivery &amp; Inspection"
            subheader="Goods Receipt &amp; Quality Check"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://shipping-status" size="3rem" color="#d35400"/>
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 7 -->
          <GenericTile
            id="tileInvoiceProcessing"
            header="Invoice Processing"
            subheader="Verify Vendor Invoice"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://payment-approval" size="3rem" color="#8e44ad"/>
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>

          <!-- 8 -->
          <GenericTile
            id="tilePaymentProcessing"
            header="Payment Processing"
            subheader="Complete Payment to Vendor"
            press="onTilePress"
            size="Auto"
            class="sapUiSmallMargin"
            frameType="TwoByOne">
            <tileContent>
              <TileContent>
                <content>
                  <core:Icon src="sap-icon://money-bills" size="3rem" color="#e67e22" />
                </content>
              </TileContent>
            </tileContent>
          </GenericTile>
        </items>
      </FlexBox>

    </content>
  </Page>
</mvc:View>
